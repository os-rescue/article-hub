        {{ 'password.changing.subject'|trans({'%name%': user}) }}
    {%- endautoescape -%}
{% endblock %}

{% block title %}
    {%- autoescape false -%}
        {{ 'password.changing.subject'|trans({'%name%': user}) }}
    {%- endautoescape -%}
{% endblock %}

